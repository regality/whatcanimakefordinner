.result
  a(class="#{_id}", href="/details/" + _id, target="_BLANK")
    .row
      .span4
        h4.name= name
        .description= description
      .span2
        .image-clip
          if image_url
            img(src=image_url)
          else
            img(src="/img/default-food.gif")

script
  var $ = this.$;
  var _id = ".#{_id}";
  var name = '<h4>#{name}</h4>';
  var htmlIngredients = '<ul>'

  var ingredients = !{JSON.stringify(ingredients)};
  for(var i = 0; i < ingredients.length; i++) {
    var tmp = '<li>' + ingredients[i].description + '</li>';
    htmlIngredients = htmlIngredients.concat(tmp);
  }
  htmlIngredients = htmlIngredients.concat('</ul>');
  $(_id).popover({
    html: true,
    placement: 'left',
    trigger: 'hover',
    title: name,
    content: htmlIngredients
  });
